<header class="site-header">
    <div class="header-left">
    </div>
    <div class="header-center">
        {{#data-logos}}
            <img class="site-logo" src="{{1x}}">
        {{/data-logos}}
    </div>
    <div class="header-right">
        {{>components/search-box}}
        <div class="site-nav">
            {{#data-portlets-sidebar.data-portlets-first}}
                {{>components/dropdown}}
            {{/data-portlets-sidebar.data-portlets-first}}
            {{#data-portlets.data-languages}}
                {{>components/dropdown}}
            {{/data-portlets.data-languages}}
            {{#data-portlets.data-notifications.array-items}}
                <a class="icon" href="{{ href }}" class="{{ class }}">{{{ label }}}</a>
            {{/data-portlets.data-notifications.array-items}}
            {{#data-portlets.data-personal}}
                {{>components/dropdown}}
            {{/data-portlets.data-personal}}
        </div>
    </div>
</header>